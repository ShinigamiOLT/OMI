@model IEnumerable<OMI.TbSolicitud>

@{
    ViewBag.Title = "AllSolicitud";
}

<h2>AllSolicitud</h2>

<p>
    <a class="btn btn-success" id="NuevoPedido" href="@Url.Action("NuevaSolicitud","Solicitud" ,new { id=-1})">Nuevo Pedido</a>
                  
</p>
<table id="assets-data-table" class="table table-striped table-bordered" style="width:100%">
    <thead>   <tr>
        <th>
            @Html.DisplayNameFor(model => model.Folio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.TbFormato.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TbUsuario.Nombre)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>

    @foreach (var item in Model) {
        <tr><td>
    @Html.DisplayFor(modelItem => item.Folio)
</td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha)
            </td>
           
           
            <td>
                @Html.DisplayFor(modelItem => item.TbFormato.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TbUsuario.Nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.IdSolicitud }) |
                @Html.ActionLink("Details", "Details", new { id=item.IdSolicitud }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.IdSolicitud })
            </td>
        </tr>
    }
    </tbody>

</table>

@section Scripts
{

    <script type="text/javascript">
        $(document).ready(function() {

            $('#assets-data-table').DataTable({
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'csv', 'excel', 'pdf', 'print'
                ],
                "scrollY": true,
                "scrollX": true,
                paging: false,
                datawidth: '*',
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                }
            });
        });
    </script>

}
