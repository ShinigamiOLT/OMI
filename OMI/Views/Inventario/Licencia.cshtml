@model IEnumerable<OIM_DAL.TbInve_Licencias>
@{
    ViewBag.Title = "Inventarios - Licencias de Software";
}
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4 class="panel-title"><i class="fa fa-pencil-square fa-2x" aria-hidden="true"></i>&nbsp;&nbsp;@ViewBag.Title</h4>
            </div>
            <div class="panel-body">

                <p>
                    <a type="button" class="btn btn-primary" href="@Url.Action("CreateLic")">Nueva Licencia</a>  
                </p>

                <table id="assets-data-table" class="table table-striped table-bordered" style="width: 100%">
                    <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tipo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Modelo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FechaAlta)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FInstalacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FCaducidad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.CuentaVinculada)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Observacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Tb_EstadoLic.Nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TbInve_Equipo_Comp.Tipo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TbInve_Equipo_Comp.TbUsuario.Nombre)
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tipo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Modelo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaAlta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FInstalacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FCaducidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CuentaVinculada)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Observacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Tb_EstadoLic.Nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TbInve_Equipo_Comp.Tipo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TbInve_Equipo_Comp.TbUsuario.Nombre)
                            </td>
                            <td>

                                <!-- Single button -->
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        <i class="fa fa-sliders" aria-hidden="true"></i> Opción <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu">
                                        <li><a href="@Url.Action("EditLic", new {id = item.Id})">Editar</a></li>
                                           
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

