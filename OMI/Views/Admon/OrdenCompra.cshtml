
@model IEnumerable<OIM_DAL.Sp_AllPedidoXEstatusXAdmin_Result>



<div class="row">
    <div class="col-md-12">
        <div class="panel panel-border panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Sistema OIM - Ingenieria Aplicada OnePro</h3>
            </div>
            <div class="panel-body">
                @using (Html.BeginForm("ordencompra", "Admon", FormMethod.Post))
                {
                    <button type="submit" class="btn btn-success">Gnerar Orden</button>
                    <table id="assets-data-table" class="table table-striped table-bordered" style="width: 100%">
                        <thead>
                        <tr>
                            <th>
                                Marcar
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Proveedor)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Folio)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Categoria)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descripcion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Unidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Cantidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Nombre)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Usuario)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Fecha)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Proveedor)
                            </th>

                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model)
                        {
                            <tr name="reglon1" value="@Html.DisplayFor(modelItem => item.Id)">
                                <td >
                                    <input type="checkbox" name="reglon" value="@Html.DisplayFor(modelItem => item.Id)" />

                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Proveedor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Folio)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Categoria)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Unidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cantidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Usuario)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.Fecha)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Proveedor)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "NuevaSolicitud", new {id = item.Id})
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
            </div>
            
            <div>
                @using (Ajax.BeginForm(new AjaxOptions()))
                {
                    <p>
                        @Ajax.ActionLink("Traer Texto","GetText", new AjaxOptions()
                        {
                            UpdateTargetId = "ContainerP",
                            InsertionMode = InsertionMode.Replace,
                            OnFailure = "ShowErrorMessage"
                        })
                    </p>
                    <p id="ContainerP"></p>
                }
            </div>
            <div class="errorMessage" id="diverrorMessage">
                <div id="errorTitle">
                    
                </div>
                <div id="errorButtons">
                    <input type="button" value="aceptar" id="btnAceptarError"/>     
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts
{https://fernandombeccaria.wordpress.com/2012/07/12/mostrar-mensajes-de-error-en-un-modal-pop-up-desde-un-controlador-mvc/

    <style type="text/css">
        div.errorMessage
        {
            display: none;
            width: 200px;
            background-color: #ffffff;
            border: 1px solid #ff0000;
            margin-left: auto;
            margin-right: auto;
            vertical-align: text-bottom;
            height: 30px;
            padding-top: 10px;
        }
        div.errorMessage #errorTitle
        { text-align: center;
            background-color: #ff0000;
            color: #ffffff;
            font-size: 1.2em;
            font-weight: bold;
            height: 30px;
            padding-top: 10px;

        }
    </style>
    <script type="text/javascript">
        $(document).ready(function() {
            $()
        };

    </script>
}
